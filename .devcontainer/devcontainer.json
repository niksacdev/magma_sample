{
  "name": "ROS2 Dev Container",
  "image": "ghcr.io/athackst/vscode_ros2_workspace:humble",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python",
        "ms-vscode.cpptools"
      ]
    }
  },
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
  ],
  "runArgs": [
    "--privileged",
    "--env=DISPLAY=${env:DISPLAY}"
  ],
  "containerEnv": {
    "ROS_DOMAIN_ID": "0",
    "RMW_IMPLEMENTATION": "rmw_fastrtps_cpp"
  },
  "postCreateCommand": "colcon build --symlink-install"
}
